<UserControl x:Class="Devkoes.JenkinsManagerUI.Views.JenkinsManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wmt="clr-namespace:Devkoes.JenkinsManagerUI.WatermarkTextbox"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Resources\Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ComboBox ItemsSource="{Binding JenkinsServers}" DisplayMemberPath="Name" 
                SelectedItem="{Binding SelectedJenkinsServer}"  />
        <Button 
            Content="add" 
            Grid.Column="1" Margin="5,0"
            VerticalAlignment="Center"
            Command="{Binding ShowAddJenkinsForm}"
            Style="{StaticResource HyperlinkLikeButton}" />

        <StackPanel Grid.Row="1" Visibility="{Binding ShowAddJenkinsServer, Converter={StaticResource BooleanToVisibilityConverter}}">

            <AdornerDecorator>
                <TextBox Margin="3" Text="{Binding AddServerUrl}">
                    <wmt:WatermarkService.Watermark>
                        <TextBlock>Jenkins server url</TextBlock>
                    </wmt:WatermarkService.Watermark>
                </TextBox>
            </AdornerDecorator>
            <AdornerDecorator>
                <TextBox Margin="3" Text="{Binding AddServerName}">
                    <wmt:WatermarkService.Watermark>
                        <TextBlock>Name</TextBlock>
                    </wmt:WatermarkService.Watermark>
                </TextBox>
            </AdornerDecorator>
            <Button 
                Content="save" 
                Grid.Column="1" Margin="5,0" HorizontalAlignment="Right"
                Command="{Binding SaveJenkinsServer}"
                Style="{StaticResource HyperlinkLikeButton}" />
        </StackPanel>
        <ItemsControl ItemsSource="{Binding Jobs}" DisplayMemberPath="Name" Grid.Row="2" />
    </Grid>
</UserControl>
